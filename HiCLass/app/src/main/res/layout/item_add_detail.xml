<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/little_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:singleLine="true"
        android:text="单个"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ib_delete"
        style="@style/ButtonBackground"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/icon_user"
        android:textSize="20sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/tv_item"
        android:background="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycle_name"
            style="@style/IconTextViewStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="@string/icon_name"
            android:textColor="#16AD9F" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="事项名称"
            android:lines="1"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/ll_name"
        android:background="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycle_time"
            style="@style/IconTextViewStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="@string/icon_clock"
            android:textColor="#FFA622" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="时间   "
            android:lines="1"
            android:textSize="14sp"
            app:autoSizeMaxTextSize="14sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_week"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/ll_time"
        android:background="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycle_week"
            style="@style/IconTextViewStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="@string/icon_user"
            android:textColor="#1571D5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/et_week"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="周数"
            android:lines="1"
            android:singleLine="true"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_teacher"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/ll_week"
        android:background="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycle_teacher"
            style="@style/IconTextViewStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="@string/icon_user"
            android:textColor="#673AB7" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="上课老师"
            android:lines="1"
            android:singleLine="true"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/ll_teacher"
        android:background="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycle_address"
            style="@style/IconTextViewStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="@string/icon_user"
            android:textColor="#FFEB3B" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="地点"
            android:lines="1"
            android:singleLine="true"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_remark"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/ll_address"
        android:background="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recycle_remark"
            style="@style/IconTextViewStyle"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="@string/icon_address"
            android:textColor="#F63D3E" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="事项备注"
            android:lines="1"
            android:singleLine="true"
            android:textSize="14sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>