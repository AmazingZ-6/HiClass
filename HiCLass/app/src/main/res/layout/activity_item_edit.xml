<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/little_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/little_white"
        android:id="@+id/toolbar_item_edit"
        app:title="编辑事项"
        app:titleTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:popupTheme="@style/Theme.MenuTest.PopupOverlay" />

    <RelativeLayout
        android:background="@color/little_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:id="@+id/item_edit_time"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:singleLine="true"
            android:text=""
            android:textSize="20sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_edit_name"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/item_edit_time"
            android:background="?android:attr/selectableItemBackground">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recycle_edit_name"
                style="@style/IconTextViewStyle"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text="@string/icon_name"
                android:textColor="#16AD9F" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/item_edit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="事项名称"
                android:lines="1"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_edit_teacher"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/ll_edit_name"
            android:background="?android:attr/selectableItemBackground">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recycle_edit_teacher"
                style="@style/IconTextViewStyle"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text="@string/icon_user"
                android:textColor="#673AB7" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/item_edit_teacher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="上课老师"
                android:lines="1"
                android:singleLine="true"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_edit_address"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/ll_edit_teacher"
            android:background="?android:attr/selectableItemBackground">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recycle_edit_address"
                style="@style/IconTextViewStyle"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text="@string/icon_user"
                android:textColor="#FFEB3B" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/item_edit_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="地点"
                android:lines="1"
                android:singleLine="true"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_edt_remark"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/ll_edit_address"
            android:background="?android:attr/selectableItemBackground">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/recycle_edit_remark"
                style="@style/IconTextViewStyle"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text="@string/icon_address"
                android:textColor="#F63D3E" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/item_edit_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="事项备注"
                android:lines="1"
                android:singleLine="true"
                android:textSize="14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>



    </RelativeLayout>



</com.google.android.material.appbar.AppBarLayout>