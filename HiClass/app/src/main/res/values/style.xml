<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconTextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <!--        <item name="android:fontFamily"></item>-->
    </style>

    <style name="ButtonBackground">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="sub_title">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Theme.AppCompat">
        <!-- 点击颜色 -->
        <item name="colorControlHighlight">#565757</item>
        <!-- 背景颜色 -->
        <item name="colorButtonNormal">#9B9C9C</item>
    </style>



