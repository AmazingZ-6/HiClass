<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiClass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryVariant">@color/little_white</item>
        <item name="colorOnPrimary">@color/little_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_red_light</item>
        <item name="colorSecondaryVariant">@android:color/holo_red_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.viewpager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MenuTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MenuTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>