<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="闹钟设置">

        <SwitchPreferenceCompat
            app:key="auto_clock"
            app:title="根据课表自动设置闹钟"
            app:summary="自动为每日上午首个事项设置闹钟"
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="urgent_stop"
            app:title="强制关闭闹钟权限"
            app:defaultValue="true"
            app:summaryOn="响铃时连续点击右下按钮强制关闭闹钟"
            app:summaryOff="禁用响铃时强制关闭功能"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:key="clock_interval"
            app:title="闹钟持续响铃时间"
            app:entries="@array/clock_interval_entries"
            app:entryValues="@array/clock_interval_values"
            app:defaultValue="3"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="全局设置">

        <SwitchPreferenceCompat
            app:key="cloud_copy"
            app:title="信息备份"
            app:summary="每周将事项及闹钟数据上传至云端"/>

        <SwitchPreferenceCompat
            app:key="info_safe"
            app:title="隐私保护"
            app:summaryOn="@string/attachment_summary_on"
            app:summaryOff="@string/attachment_summary_off" />


    </PreferenceCategory>

</PreferenceScreen>