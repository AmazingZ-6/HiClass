<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".alarm.ClockRing">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center_vertical"
            android:id="@+id/ring_time"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="#151515"
            android:text="    16:30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ring_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="                工程伦理"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/ring_que_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/ring_que_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/ring_que_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/ring_que_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/ring_que_d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>