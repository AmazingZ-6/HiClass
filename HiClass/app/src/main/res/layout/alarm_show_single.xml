<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/alarm_show_single_visibility"
                android:orientation="vertical"
                android:layout_width="260dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/alarm_show_single_time"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="16:30"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center"
                        android:id="@+id/alarm_show_single_type_icon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/alarm_show_single_type"
                        android:gravity="center_vertical|start"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"/>
                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/alarm_show_single_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:text="自定义闹钟"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/alarm_show_switcher_single"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/alarm_show_single_gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alarm_single_delete"
            style="@style/ButtonBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:fontFamily="@assets/iconfont"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="20sp"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/alarm_single_edit"
            style="@style/ButtonBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:fontFamily="@assets/iconfont"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />



    </androidx.appcompat.widget.LinearLayoutCompat>







</LinearLayout>