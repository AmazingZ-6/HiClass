<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/little_white"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/little_white">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_alarm_show"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/little_white"
            app:popupTheme="@style/Theme.MenuTest.PopupOverlay"
            app:title="闹钟设置"
            app:titleTextColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/next_clock_ring"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#3D3F40"
            android:text="16 小时 55 分钟后响铃"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="60dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alarm_show_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/alarm_show_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="TODO"
        app:backgroundTint="@color/white"
        android:src="@drawable/ic_add" />



</FrameLayout>
